<Page
    x:Class="OelianderUI.Views.TerminalPage"
    Style="{DynamicResource MahApps.Styles.Page}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:properties="clr-namespace:OelianderUI.Properties"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Style="{StaticResource PageTitleStyle}"
            Margin="{StaticResource MediumLeftMargin}"
            Text="{x:Static properties:Resources.TerminalPageTitle}"
            HorizontalAlignment="Center" Foreground="White" />
        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="229*"/>
                <ColumnDefinition Width="4*"/>
                <ColumnDefinition Width="136*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="15*"/>
                <RowDefinition Height="42*"/>
                <RowDefinition Height="11*"/>
                <RowDefinition Height="289*"/>
                <RowDefinition Height="31*"/>
                <RowDefinition Height="14*"/>
            </Grid.RowDefinitions>
            <Button
                Grid.Column="3"
                Grid.Row="1"
                Content="Connect" 
                x:Name="ConnectButton"
                Margin="136,0,18,0" Click="Button_Click" />
            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                x:Name="connectionString"
                TextAlignment="Center"
                Text="admin@127.0.0.1:admin123" 
                Margin="159,0,158,0" 
                FontSize="18" />
            <RichTextBox
                Grid.Row="3"
                Grid.Column="1"
                x:Name="LogBox"
                IsReadOnly="True" 
                BorderThickness="2,2,2,2" 
                Background="#FF5D5B5B" 
                Foreground="#FF014D16" TextChanged="logRichTextBox_TextChanged">
                <RichTextBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem
                            x:Name="uploadRemote"
                            Click="UploadFileToTarget"
                            Header="Upload File">
                            <MenuItem.Icon>
                                <Image Source="/Assets/upload.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem
                            x:Name="downloadLocal"
                            Click="DownloadFileFromTarget"
                            Header="Download File">
                            <MenuItem.Icon>
                                <Image Source="/Assets/download.png" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </RichTextBox.ContextMenu>
            </RichTextBox>
            <TextBox
                Grid.Row="4"
                Grid.Column="1"
                x:Name="commandText"
                Text="" 
                Grid.RowSpan="1" 
                Grid.ColumnSpan="1" 
                KeyDown="commandText_KeyDown" 
                HorizontalAlignment="Left" 
                Width="436" Margin="20,0,0,0"/>
            <!--[Used in TextBox above] {Binding CommandText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}-->
            <DataGrid
                x:Name="termGrid"
                Grid.Row="3"
                Grid.Column="3"
                Grid.RowSpan="2" 
                CanUserAddRows="False"
                AutoGenerateColumns="False"
                SelectedCellsChanged="userGrid_SelectedCellsChanged_1"
                ItemsSource="{Binding CollectedTargets}" >
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Index}" Header="#" />
                    <DataGridTextColumn Binding="{Binding IPAddress}" Header="IPAddress" />
                    <DataGridTextColumn Binding="{Binding Username}" Header="Username" />
                    <DataGridTextColumn Binding="{Binding Password}" Header="Password" />
                </DataGrid.Columns>
            </DataGrid>
            <TextBlock
                Grid.Row="1"
                Grid.Column="1"
                Text="Server Address:" 
                FontSize="18" 
                Margin="7,6,299,9" />
            <TextBlock
                Grid.Row="4"
                Grid.Column="1"
                Text="&gt; "
                VerticalAlignment="Center"
                FontSize="20" 
                Margin="3,0,439,0" Foreground="White" />
        </Grid>
    </Grid>
</Page>
