<Page
    x:Class="OelianderUI.Views.MainPage"
    Style="{DynamicResource MahApps.Styles.Page}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:properties="clr-namespace:OelianderUI.Properties"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Style="{StaticResource PageTitleStyle}"
            Margin="24,0,0,0"
            x:Name="targetLabel"
            Text="{x:Static properties:Resources.MainPageTitle}" 
            Grid.ColumnSpan="2" 
            Height="30" 
            HorizontalAlignment="Center" />
        <Grid 
            Grid.Row="1" 
            Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="27*"/>
                <RowDefinition Height="107*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="387*"/>
                <ColumnDefinition Width="413*"/>
            </Grid.ColumnDefinitions>
            <TextBlock
                Text="Target(s):" 
                Margin="9,10,275,0" 
                FontSize="18" 
                Height="34" 
                VerticalAlignment="Top" />
            <TextBox
                x:Name="TargetTextBox" 
                Height="30" 
                VerticalAlignment="Top" 
                Margin="9,40,5,0" />
            <Button 
                x:Name="fileSelect"
                Margin="0,41,281,0" 
                Content="Select" 
                Height="30" 
                VerticalAlignment="Top" 
                Click="fileSelect_Click" 
                Grid.Column="1" RenderTransformOrigin="0.505,1.354" />
            <RadioButton
                x:Name="ManualScanButton"
                Content="Manual Scan" 
                Margin="139,3,134,0" 
                IsChecked="True" 
                Height="30" 
                VerticalAlignment="Top" 
                Grid.Column="1" 
                Checked="ManualScanButton_Checked" />
            <RadioButton
                x:Name="ShodanScanButton"
                Content="Shodan Scan" 
                Margin="248,3,25,0" 
                Height="30" 
                VerticalAlignment="Top" 
                Grid.Column="1" 
                Checked="ShodanScanButton_Checked" />
            <RichTextBox
                Grid.Row="1"
                x:Name="LogBox"
                IsReadOnly="True" 
                Margin="7,0,5,10"
                Background="#FF5D5B5B" 
                Foreground="#FF186F00">
                <RichTextBox.ContextMenu>
                    <ContextMenu>
                        <MenuItem
                            x:Name="fetchLogs"
                            Click="GetLogs"
                            Header="Check Logs" >
                            <MenuItem.Icon>
                                <Image Source="/Assets/fetchlogs.png" ></Image>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem 
                            Click="ClearLogs" 
                            Header="Clear Logs">
                            <MenuItem.Icon>
                                <Image Source="/Assets/clearlogs.png" ></Image>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem
                            x:Name="ResultButton"
                            Click="CheckResults"
                            Header="Check Results">
                            <MenuItem.Icon>
                                <Image Source="/Assets/folderopen.png" ></Image>
                            </MenuItem.Icon>
                        </MenuItem> />
                    </ContextMenu>
                </RichTextBox.ContextMenu>
            </RichTextBox>
            <DataGrid
                x:Name="userGrid"
                Grid.Row="1"
                AutoGenerateColumns="False"
                GridLinesVisibility="Horizontal"
                CanUserAddRows="False"
                ItemsSource="{Binding Source}"
                KeyboardNavigation.TabNavigation="Once" Margin="0,0,5,10" SelectedCellsChanged="userGrid_SelectedCellsChanged" Grid.Column="1">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Index}" Header="#" />
                    <DataGridTextColumn Binding="{Binding IPAddress}" Header="IPAddress" />
                    <DataGridTextColumn Binding="{Binding Username}" Header="Username" />
                    <DataGridTextColumn Binding="{Binding Password}" Header="Password" />
                    <DataGridTextColumn Binding="{Binding Status}" Header="Status" />
                </DataGrid.Columns>
                <DataGrid.ContextMenu>
                    <ContextMenu>
                        <MenuItem
                            x:Name="btwButton"
                            Click="AttemptBTW"
                            Header="Try Install BTW Backdoor"
                            IsEnabled="False">
                            <MenuItem.Icon>
                                <Image Source="/Assets/btw.png" ></Image>
                            </MenuItem.Icon>
                        </MenuItem>
                    </ContextMenu>
                </DataGrid.ContextMenu>
            </DataGrid>
            <Button x:Name="StartScanButton" Margin="241,41,30,0" Content="Start" Height="30" VerticalAlignment="Top" Click="StartScan" Grid.Column="1" />
        </Grid>
    </Grid>
</Page>
